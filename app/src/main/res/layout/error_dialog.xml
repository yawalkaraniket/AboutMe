<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/blank_layout"
        android:layout_width="wrap_content"
        android:layout_height="400dp"></RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blank_layout"
        android:layout_margin="20dp"
        android:background="@drawable/costom_toast_background">

        <com.aboutme.avenjr.aboutme.view.AppTextView
            android:id="@+id/error_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:gravity="center" />
    </RelativeLayout>
</RelativeLayout>
