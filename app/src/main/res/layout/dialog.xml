<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/dialog_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="My Dialog"
            android:background="@drawable/dialog_header"
            android:textSize="@dimen/fui_auth_method_button_drawablePadding"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:gravity="center">
        <TextView
            android:id="@+id/dialog_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_user_mobile_number"
            android:textStyle="bold"
            android:textColor="@color/dark_black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/dialog_cross_footer"
        android:src="@drawable/dialog_cross_click"
        android:id="@+id/layout_dialog_cancel"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/layout_dialog_cancel"
        android:background="@drawable/dialog_right_footer"
        android:src="@drawable/dialog_right_click"
        android:id="@+id/layout_dialog_yes"
        />
    </RelativeLayout>
</LinearLayout>
