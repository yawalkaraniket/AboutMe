<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.sqlOperations.AddUser">

    <RelativeLayout
        android:id="@+id/layout_parent"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/white"
        tools:ignore="UselessParent"
        android:padding="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/FloatingHintStyle">

            <com.aboutme.avenjr.aboutme.view.FontEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:hint="@string/request_user_name"
                android:imeOptions="actionGo"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_first_name"
            app:hintTextAppearance="@style/FloatingHintStyle">

            <com.aboutme.avenjr.aboutme.view.FontEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:hint="@string/request_user_lastName"
                android:imeOptions="actionGo"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_last_name"
            app:hintTextAppearance="@style/FloatingHintStyle">

            <com.aboutme.avenjr.aboutme.view.FontEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:hint="enter your age..."
                android:imeOptions="actionGo"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/input_age"
            android:layout_centerHorizontal="true"
            android:text="@string/fui_button_text_save" />

    </RelativeLayout>
</RelativeLayout>