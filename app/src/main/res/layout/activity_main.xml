<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    tools:context="com.aboutme.avenjr.aboutme.activity.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/about_me"
        android:layout_marginBottom="30dp"
        android:id="@+id/home_image"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:clickable="true">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_facebook_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/have_an_account_button"/>
        <Button
                android:id="@+id/layout_continue_with_facebook"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/green"
                android:text="@string/sign_in_with_email"
                android:textColor="@color/white"
                android:layout_below="@+id/have_an_account_button"/>

            <Button
                android:id="@+id/layout_continue_with_mail"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorPrimary"
                android:text="@string/continue_with_mail"
                android:textColor="@color/white"
                android:layout_below="@id/layout_continue_with_facebook"/>

            <Button
                android:id="@+id/have_an_account_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/already_have_an_account"
                android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>
