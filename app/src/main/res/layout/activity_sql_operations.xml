<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SqlOperations">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:text="@string/add_user" />

    <Button
        android:id="@+id/update_user"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btnAdd"
        android:text="@string/update_user"
        android:layout_toEndOf="@+id/btnAdd" />

    <Button
        android:id="@+id/remove_user"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/update_user"
        android:text="@string/remove_user"
        android:layout_toEndOf="@+id/update_user" />

    <TextView
        android:id="@+id/table_row_count"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:gravity="center"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:id="@+id/base_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnAdd"
        android:layout_margin="5dp"
        android:background="@color/app_background" />

</RelativeLayout>