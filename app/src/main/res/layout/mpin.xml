<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:id="@+id/mpin_layout">
    <ImageView
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        android:padding="10dp" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="1"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="5dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/one"
        android:src="@drawable/circle"
        android:id="@+id/two"
        android:padding="10dp"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/one"
        android:text="2"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="10dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/two"
        android:src="@drawable/circle"
        android:id="@+id/three"
        android:padding="10dp"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/two"
        android:text="3"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="5dp"/>
    <ImageView
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        android:layout_below="@+id/one"
        android:padding="10dp"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_below="@+id/one"
        android:text="4"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        android:padding="10dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/four"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/four"
        android:layout_below="@+id/two"
        android:text="5"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        android:padding="10dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/five"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/five"
        android:layout_below="@+id/three"
        android:text="6"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/seven"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        android:padding="10dp"
        android:layout_below="@+id/four"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/four"
        android:gravity="center"
        android:text="7"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/eight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        android:padding="10dp"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@+id/seven"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/seven"
        android:layout_below="@+id/five"
        android:text="8"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/nine"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        android:padding="10dp"
        android:layout_below="@+id/six"
        android:layout_toRightOf="@+id/eight"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/eight"
        android:layout_below="@+id/six"
        android:text="9"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/baseline_backspace_black_48"
        android:padding="10dp"
        android:layout_below="@+id/nine"
        android:layout_toRightOf="@+id/eight"/>

    <ImageView
        android:id="@+id/zero"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        android:padding="10dp"
        android:layout_below="@+id/eight"
        android:layout_toLeftOf="@id/back"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/back"
        android:layout_below="@+id/eight"
        android:text="0"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:padding="5dp"/>

</RelativeLayout>
    <TextView
        android:id="@+id/mPin_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mPin_error"
        android:layout_below="@+id/mpin_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:visibility="gone"/>
</RelativeLayout>
